<h1 style="color:blue">Update your Password  </h1>
<div class="mb-3 col-4">

<% if @user.errors.any?%>
        <p><%= @user.errors.full_messages.join(', ')%></p>
    <% end%>

<%= form_with url: update_password_path(current_user), model:@user do |form| %>
    <div class="form-group ">
        <%= form.label :current_password%>
        <%= form.text_field :current_password, class:"form-control"%>
    </div>
   
    <div class="form-group ">
   
        <%= form.label :new_password%>
        <%= form.text_field :new_password, class:"form-control" %>
    </div>
    <br>

    <div class="form-group ">
        <%= form.label :new_password_confirmation %>
        <%= form.text_field :new_password_confirmation, class:"form-control" %>
    </div>
    
    <%= form.submit "change password", class:"btn btn-outline-primary"%>

<% end %>
</div>





